<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EquipotFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/contenedor_equipot">

    </androidx.recyclerview.widget.RecyclerView>

    //Esto no va aqui es para probar como se ve
    <include layout="@layout/cardview2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_equipot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"

        app:srcCompat="@drawable/bottom_wave"/>

</FrameLayout>